@page "/profile"
@using ShareSphere.Data
@inject FirebaseAuthentication firebaseAuth

<div class="profile-info my-2">
    <div class="row">
        <div class="col-3 mr-1 py-2">
            <img src="/images/bot_fill.png" class="rounded-circle profile-info-icon" />
        </div>
        <div class="col-9 ml-1">
            <div class="row username">
                <div class="col">
                    @gamer.getUsername()
                </div>
            </div>
            <div class="row">
                @if (gamer.getPlatforms().Count > 0)
                {
                    @foreach (int i in gamer.getPlatforms())
                    {
                        <div class="col-auto platform-label rounded-1 m-1 px-2 py-1">@i</div>
                    }
                }
                else
                {
                    <span>Keine Plattform ausgewählt</span>
                }
            </div>
            <div class="row games">
                <div class="col">
                    @if (gamer.getGames().Count > 0)
                    {
                        @foreach (int i in gamer.getGames())
                        {
                            <span>/ Game Nr. @i /</span>
                        }
                    }
                    else
                    {
                        <span>Keine Games ausgewählt</span>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
                @gamer.getBiography();
        </div>
    </div>
    <div class="row my-2 text-center">
        <div class="col">
            <div id="add-post-btn-div">
                <button id="add-post-btn" class="gradient-btn w-100">Add post</button>
            </div>
        </div>
        <div class="col">
            <div id="settings-btn-div">
                <button id="settings-btn" class="gradient-btn w-100">Settings</button>
            </div>
        </div>
    </div>
</div>
<div class="profile-posts text-center h-100 align-items-center">
    <div>No content added yet</div>
</div>

@code {
    Gamer gamer;

    protected override void OnInitialized()
    {
        gamer = firebaseAuth.getLoggedInUser();
    }
}
