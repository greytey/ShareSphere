@page "/profile"

<div class="profile-info my-2">
    <div class="row">
        <div class="col-3 mr-1 py-2">
            <img src="/images/bot_fill.png" class="rounded-circle profile-info-icon" />
        </div>
        <div class="col-9 ml-1">
            <div class="row username">
                <div class="col">
                    Quicktey
                </div>
            </div>
            <div class="row">
                <div class="col-auto platform-label rounded-1 m-1 px-2 py-1">PC</div>
                <div class="col-auto platform-label rounded-1 m-1 px-2 py-1">PS5</div>
                <div class="col-auto platform-label rounded-1 m-1 px-2 py-1">Switch</div>
            </div>
            <div class="row games">
                <div class="col">
                    Apex Legends / Horizon Forbidden West / Fall Guys
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            I identify as he / him<br />
            Developer<br />
            Gamer<br />
        </div>
    </div>
    <div class="row my-2 text-center">
        <div class="col">
            <div id="add-post-btn-div">
                <button id="add-post-btn" class="gradient-btn w-100">Add post</button>
            </div>
        </div>
        <div class="col">
            <div id="settings-btn-div">
                <button id="settings-btn" class="gradient-btn w-100">Settings</button>
            </div>
        </div>
    </div>
</div>
